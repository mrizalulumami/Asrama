<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/toolbar_base" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:orientation="vertical">





            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="5dp"
                card_view:cardElevation="9dp"
                android:layout_marginRight="20dp"

                android:background="@drawable/round_border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/round_border">

                        <haqiqi_studio.smartpondok.CustomFonts.EditText_Roboto_Regular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FAFAFA"
                            android:hint="Yunita Aziza"
                            android:padding="15dp"
                            android:inputType="numberSigned"
                            android:textSize="13dp" />



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="18dp"
                        android:background="@drawable/round_border">

                        <haqiqi_studio.smartpondok.CustomFonts.EditText_Roboto_Regular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FAFAFA"
                            android:hint="Jumlah transfer"
                            android:padding="15dp"
                            android:inputType="numberSigned"
                            android:textSize="13dp" />

                    </LinearLayout>


                    <CheckBox
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="   Simpan informasi transfer ke Email"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"/>

                    <haqiqi_studio.smartpondok.CustomFonts.MyTextView_Roboto_Medium
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Transfer"
                        android:textAllCaps="false"
                        android:layout_marginTop="30dp"
                        android:textColor="#ffffff"
                        android:padding="15dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_button"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>

                    <haqiqi_studio.smartpondok.CustomFonts.MyTextView_Roboto_Regular
                        android:id="@+id/kembali"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kembali"
                        android:padding="15dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_button2"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textAllCaps="false"
                        android:layout_marginBottom="20dp"
                        />



                </LinearLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>
    </ScrollView>

</LinearLayout>
