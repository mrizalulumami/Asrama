<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.LihatPesanan">

    <include layout="@layout/toolbar_base"/>

    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardElevation="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <haqiqi_studio.smartpondok.CustomFonts.MyTextView_Roboto_Regular
                    android:id="@+id/item_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="Kentang Goreng"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="@color/red"
                    android:textSize="18dp" />

                <haqiqi_studio.smartpondok.CustomFonts.MyTextView_Roboto_Regular
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:gravity="right"
                    android:text="Rp. 8.000"
                    android:textColor="@color/darkblue"
                    android:textSize="20dp" />


            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <haqiqi_studio.smartpondok.CustomFonts.MyTextView_Roboto_Regular
                    android:id="@+id/item_tgl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="Biaya tambahan : R. 2.000"
                    android:textStyle="italic"
                    android:textColor="@color/gray1" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <haqiqi_studio.smartpondok.CustomFonts.MyTextView_Roboto_Regular
                    android:id="@+id/item_nobayar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="Rp. 10.000"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="@color/darkblue"
                    android:textSize="18dp" />

                <haqiqi_studio.smartpondok.CustomFonts.Button_Roboto_Medium
                    android:id="@+id/item_bayar"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="3dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="BAYAR"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textColor="@color/foreColor" />


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>