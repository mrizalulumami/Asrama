<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/toolbar_base" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:orientation="vertical">





            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="5dp"
                card_view:cardElevation="9dp"
                android:layout_marginRight="20dp"

                android:background="@drawable/round_border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/round_border">

                        <haqiqi_studio.smartpondok.CustomFonts.MyTextView_Roboto_Medium
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nama wali:"
                            android:padding="15dp"
                            android:textSize="13dp" />

                        <haqiqi_studio.smartpondok.CustomFonts.EditText_Roboto_Regular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FAFAFA"
                            android:text="Harry Sunaryo"
                            android:padding="15dp"
                            android:textSize="13dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="18dp"
                        android:background="@drawable/round_border">

                        <haqiqi_studio.smartpondok.CustomFonts.MyTextView_Roboto_Medium
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nama santri:"
                            android:padding="15dp"
                            android:textSize="13dp" />

                        <haqiqi_studio.smartpondok.CustomFonts.EditText_Roboto_Regular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FAFAFA"
                            android:text="Puji Kartika"
                            android:padding="15dp"
                            android:inputType="numberSigned"
                            android:textSize="13dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="18dp"
                        android:background="@drawable/round_border">

                        <haqiqi_studio.smartpondok.CustomFonts.MyTextView_Roboto_Medium
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Daftar pesanan:"
                            android:padding="15dp"
                            android:textSize="13dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <haqiqi_studio.smartpondok.CustomFonts.EditText_Roboto_Regular
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="#FAFAFA"
                                android:text="Kentang goreng"
                                android:inputType="numberSigned"
                                android:padding="15dp"
                                android:textSize="13dp" />

                            <haqiqi_studio.smartpondok.CustomFonts.EditText_Roboto_Regular
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="#FAFAFA"
                                android:text="Rp. 8.000"
                                android:padding="15dp"
                                android:textColor="@color/red"
                                android:textSize="15dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <haqiqi_studio.smartpondok.CustomFonts.MyTextView_Roboto_Regular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date : 13-02-2020"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"/>

                    <haqiqi_studio.smartpondok.CustomFonts.MyTextView_Roboto_Regular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Biaya lainnya : Rp. 2.000"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"/>

                    <haqiqi_studio.smartpondok.CustomFonts.MyTextView_Roboto_Regular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total bayar : Rp. 10.000"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:weightSum="2">

                        <haqiqi_studio.smartpondok.CustomFonts.EditText_Roboto_Regular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#FAFAFA"
                            android:text="Saldo:"
                            android:inputType="numberSigned"
                            android:padding="15dp"
                            android:textSize="13dp" />

                        <haqiqi_studio.smartpondok.CustomFonts.EditText_Roboto_Regular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#FAFAFA"
                            android:padding="15dp"
                            android:text="Rp. 5.000.000"
                            android:textColor="@color/red"
                            android:textSize="15dp" />

                    </LinearLayout>

                    <haqiqi_studio.smartpondok.CustomFonts.MyTextView_Roboto_Medium
                        android:id="@+id/gunakan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gunakan Saldo"
                        android:textAllCaps="false"
                        android:layout_marginTop="30dp"
                        android:textColor="#ffffff"
                        android:padding="15dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_button"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>



                    <haqiqi_studio.smartpondok.CustomFonts.MyTextView_Roboto_Regular
                        android:id="@+id/bayar_lain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Metode bayar lainnya"
                        android:padding="15dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_button2"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textAllCaps="false"
                        android:layout_marginBottom="20dp"
                        />



                </LinearLayout>
            </android.support.v7.widget.CardView>



        </LinearLayout>
    </ScrollView>

</LinearLayout>
