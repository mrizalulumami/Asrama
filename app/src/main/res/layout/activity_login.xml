<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="0dp"
    tools:context=".Activities.Login">



    <ImageView
        android:src="@drawable/logo_spondok"
        android:layout_width="match_parent"
        android:layout_height="170dp"/>

    <haqiqi_studio.smartpondok.CustomFonts.MyTextView_Roboto_Regular
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFA"
        android:hint="Halaman Login Wali"
        android:gravity="center"
        android:padding="5dp"
        android:inputType="numberSigned"
        android:textSize="18dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:orientation="vertical">



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="5dp"
            card_view:cardElevation="9dp"
            android:layout_marginRight="20dp"

            android:background="@drawable/round_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/round_border">

                    <haqiqi_studio.smartpondok.CustomFonts.EditText_Roboto_Regular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FAFAFA"
                        android:hint="Harry Sunaryo"
                        android:padding="15dp"
                        android:inputType="numberSigned"
                        android:textSize="13dp" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="18dp"
                    android:background="@drawable/round_border">

                    <haqiqi_studio.smartpondok.CustomFonts.EditText_Roboto_Regular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FAFAFA"
                        android:hint="1231231"
                        android:padding="15dp"
                        android:inputType="textPassword"
                        android:textSize="13dp" />

                </LinearLayout>


                <haqiqi_studio.smartpondok.CustomFonts.MyTextView_Roboto_Medium
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:textAllCaps="false"
                    android:layout_marginTop="30dp"
                    android:textColor="#ffffff"
                    android:padding="15dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_button"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>

                <haqiqi_studio.smartpondok.CustomFonts.MyTextView_Roboto_Regular
                    android:id="@+id/kembali"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kembali"
                    android:padding="15dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:background="@drawable/rounded_button2"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textAllCaps="false"
                    android:layout_marginBottom="20dp"
                    />



            </LinearLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>


</LinearLayout>