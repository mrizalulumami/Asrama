<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingPrefix"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/main_color"
    android:minHeight="?attr/actionBarSize"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    app:popupTheme="@style/AlertDialog.AppCompat.Light"
    android:elevation="10dp"
    android:clickable="true">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:ignore="MissingPrefix"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/main_color"
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/AlertDialog.AppCompat.Light"
        android:elevation="10dp"
        android:clickable="true">

        <haqiqi_studio.smartpondok.CustomFonts.MyTextView_Roboto_Bold
            android:id="@+id/toolbar_judul"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="@string/app_bar_name"
            android:textColor="@color/foreColor"
            android:textSize="22sp" />

        <ImageView
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/app_bar_name"
            android:id="@+id/home_img_send"
            android:scaleType="fitCenter"
            android:paddingTop="6dp"
            android:paddingLeft="5dp"
            app:srcCompat="@drawable/logo_spondok"
            android:layout_width="40dp"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_alignParentRight="true"
            android:contentDescription="@string/app_bar_name"
            android:id="@+id/home_cart"
            android:scaleType="fitCenter"
            android:paddingTop="6dp"
            android:paddingRight="5dp"
            app:srcCompat="@drawable/cart"
            android:layout_width="40dp"
            android:layout_height="match_parent" />

        <haqiqi_studio.smartpondok.CustomFonts.MyTextView_Roboto_Bold
            android:id="@+id/notif"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="3"
            android:textColor="@color/red"
            android:layout_alignTop="@id/home_cart"
            android:layout_alignParentRight="true"
            android:textSize="18sp" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/foreColor"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/foreColor">

            <LinearLayout

                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#3CDD37"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal">


            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@color/foreColor"
                android:layout_below="@id/header"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-80dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="@color/foreColor"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/foreColor"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/poto" />


                </LinearLayout>
            </android.support.v7.widget.CardView>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/foreColor"
            android:orientation="vertical">



            haqiqi_studio.smartpondok.CustomFonts.Button_Roboto_Medium
                android:text="EDIT"
                android:background="@color/main_color"
                android:textColor="@color/foreColor"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/foreColor"
        android:padding="10dp"
        android:orientation="vertical">


        <haqiqi_studio.smartpondok.CustomFonts.MyTextView_Roboto_Bold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harry Sunaryo"
            android:textColor="@color/black_overlay"
            android:gravity="center"
            android:textSize="22dp"/>

        <android.support.v7.widget.CardView
            android:padding="5dp"
            android:layout_margin="5dp"
            android:elevation="15dp"
            android:background="@color/foreColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/foreColor"
                android:weightSum="10"
                android:orientation="horizontal">
                <haqiqi_studio.smartpondok.CustomFonts.EditText_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:padding="5dp"
                    android:hint="Cari kebutuhan anda .."
                    android:textColorHint="@color/gray1"
                    android:background="@color/foreColor"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_alignParentRight="true"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_search"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="5dp"
            android:background="@color/foreColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:weightSum="2"
                android:orientation="horizontal">
                <haqiqi_studio.smartpondok.CustomFonts.EditText_Roboto_Regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:textColor="@color/black_overlay"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:textSize="16dp"
                    android:text="RIWAYAT TRANSAKSI"/>

                <haqiqi_studio.smartpondok.CustomFonts.EditText_Roboto_Regular
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="Rp. 5.000.000"
                    android:textColor="@color/red"
                    android:textSize="22dp"
                    android:background="@color/gray" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>




